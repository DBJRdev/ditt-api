<html lang="de">
    <head>
        <meta charset="utf-8" />
        <style>
            body {
                font-family: helvetica, roboto, arial, sans-serif;
            }
        </style>
    </head>

    <body>
        <h1>Arbeitsmonat angenommen</h1>
        <p>
            <strong>Arbeitsmonat: </strong>{{ workMonth.month }}/{{ workMonth.year.year }}<br>
            <strong>Betrifft: </strong>{{ workMonth.user.firstName }} {{ workMonth.user.lastName }}<br>
            {% if supervisor is not null %}
                <strong>Angenommen durch: </strong>{{ supervisor.firstName }} {{ supervisor.lastName }}
            {% endif %}
        </p>
    </body>
</html>